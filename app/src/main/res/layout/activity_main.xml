<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#16FFE6">
   <LinearLayout
       android:layout_width="364dp"
       android:layout_height="241dp"
       android:orientation="vertical"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="Formulario de Ingreso"
           android:textColor="@color/black"
           android:textSize="22sp" />
       <EditText
           android:id="@+id/edtRut"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Ingrese Rut:"
           android:minHeight="48dp"/>
       <EditText
           android:id="@+id/edtNombre"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Ingrese Nombre:"
           android:minHeight="48dp"/>
       <EditText
           android:id="@+id/edtDireccion"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Ingrese Direccion:"
           android:minHeight="48dp"/>
       <Spinner
           android:id="@+id/spSpinner"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="48dp"
           android:contentDescription="Comuna"/>

   </LinearLayout>

    <Button
        android:layout_width="113dp"
        android:layout_height="52dp"
        android:layout_marginTop="276dp"
        android:backgroundTint="#EF156B"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.081"/>

    <Button
        android:layout_width="113dp"
        android:layout_height="52dp"
        android:layout_marginTop="276dp"
        android:backgroundTint="#EF156B"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="117dp"
        android:layout_height="52dp"
        android:layout_marginTop="276dp"
        android:backgroundTint="#EF156B"
        android:text="Modificar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lstLista"
        android:layout_width="367dp"
        android:layout_height="385dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>